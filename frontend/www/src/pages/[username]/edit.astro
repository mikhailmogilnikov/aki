---
import { BentoGrid } from "~/features/bento/ui/bento-grid";
import Avatar from "~/shared/ui/kit/Avatar.astro";
import RootLayout from "~/shared/ui/layouts/RootLayout.astro";

export const prerender = false;
const { username } = Astro.params;
---

<RootLayout
  title={`Edit ${username}`}
  className="overflow-x-hidden overflow-y-scroll purple open-runde"
>
  <main
    class="max-w-8xl mx-auto flex flex-col lg:flex-row gap-6 lg:px-8 py-10 lg:py-20"
  >
    <header
      class="flex gap-4 flex-col items-start max-lg:max-w-107 px-4 max-lg:mx-auto lg:sticky lg:top-20 lg:h-fit lg:max-w-120 w-full"
      role="banner"
    >
      <Avatar
        src="https://avatars.githubusercontent.com/u/125604210?v=4"
        alt="Mikhail Mogilnikov"
        className="size-46"
        blur={true}
        blurClassName="lg:top-38 lg:left-20 lg:scale-x-210 lg:scale-y-170"
      />
      <h1 class="text-4xl font-bold px-2 mt-4 z-1">Mikhail Mogilnikov</h1>
      <p class="text-lg text-muted-foreground px-2 z-1">
        Software & Design Engineer
      </p>
    </header>

    <section class="w-full max-w-107 mx-auto px-2 lg:px-0">
      <BentoGrid client:only />
    </section>
  </main>
</RootLayout>
