---
import { CONFIG } from "~/shared/model/config";
import { SEO } from "astro-seo";

import "~/app/globals.css";
import Squircle from "~/shared/lib/scripts/squircle.astro";

type Props = {
  title?: string;
  description?: string;
  faviconUrl?: string;
  className?: string;
  htmlClassName?: string;
  image?: string;
};

const {
  title = CONFIG.TITLE,
  description = CONFIG.DESCRIPTION,
  faviconUrl = "/favicon.svg",
  className,
  htmlClassName,
  image,
} = Astro.props;
---

<!doctype html>
<html lang="en" class={htmlClassName}>
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href={faviconUrl} />

    <link rel="stylesheet" href="/fonts/open-runde/open-runde.css" />
    <link rel="stylesheet" href="/fonts/gilroy/stylesheet.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Montserrat:ital,wght@0,100..900;1,100..900&family=Oswald:wght@200..700&family=JetBrains+Mono:ital,wght@0,100..800;1,100..800&family=Vollkorn:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image || faviconUrl,
          url: Astro.url,
        },
        optional: {
          description: description,
          // TODO: add site name
          siteName: title,
        },
      }}
      twitter={{
        card: "summary_large_image",
        title: title,
        description: description,
        image: image || faviconUrl,
        imageAlt: title,
      }}
      extend={{
        meta: [
          {
            name: "viewport",
            content:
              "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover",
          },
        ],
      }}
    />
  </head>
  <body
    class:list={[
      "bg-background text-foreground min-h-screen antialiased overflow-y-scroll",
      className,
    ]}
  >
    <Squircle />

    <slot />
  </body>
</html>
